{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Todo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Itemcode</th>
                <th>Itemname</th>
                <th>Itemprice</th>
                <th>Itemquantity</th>
                <th>Itemstatus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('todo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.itemCode }}</td>
                <td>{{ entity.itemName }}</td>
                <td>{{ entity.itemPrice }}</td>
                <td>{{ entity.itemQuantity }}</td>
                <td>{{ entity.itemStatus }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('todo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('todo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('todo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
